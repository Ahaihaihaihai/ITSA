#include <iostream>
using namespace std;

int main(){

    int time;
    cin >> time;
    int day, hour, minute;
    if(time / 60*60*24) day = time / (60*60*24); time %= (60*60*24);
    if(time / 60*60) hour = time / (60*60); time %= (60*60);
    if(time / 60) minute = time / 60; time %= 60;
    cout << day << " days" << endl;
    cout << hour << " hours" << endl;
    cout << minute << " minutes" << endl;
    cout << time << " seconds" << endl;

    return 0;
}
